      <TabPane fx:id="accountTabPane" prefHeight="200.0" prefWidth="200.0" tabClosingPolicy="ALL_TABS" BorderPane.alignment="CENTER">
        <tabs>
          <Tab fx:id="homeTab" closable="false" text="Home" />
          <Tab fx:id="addTab" closable="false" styleClass="add-tab" text="+" />
        </tabs>
      </TabPane>
   </center>
   <stylesheets>
      <URL value="@../css/style.css" />
