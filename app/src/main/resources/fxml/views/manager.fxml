<BorderPane prefHeight="565.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1">
   <left>
      <AnchorPane prefHeight="565.0" prefWidth="250.0" styleClass="navbar" BorderPane.alignment="CENTER">
        <TextField fx:id="searchField" layoutX="10.0" layoutY="11.0" prefHeight="28.0" prefWidth="230.0" />
        <Separator layoutY="50.0" prefHeight="1.0" prefWidth="250.0" />
        <ListView fx:id="accountListView" fixedCellSize="72.0" layoutY="52.0" prefHeight="513.0" prefWidth="250.0" />
        <Button fx:id="matchCaseButton" alignment="CENTER" contentDisplay="GRAPHIC_ONLY" layoutX="189.0" layoutY="12.0" mnemonicParsing="false" onAction="#matchCaseAction" prefHeight="25.0" prefWidth="25.0" textAlignment="CENTER">
           <graphic>
              <ImageView fitHeight="23.0" fitWidth="23.0" pickOnBounds="true" preserveRatio="true">
                 <Image url="@../../images/icons/match_case.png" />
                 <viewport>
                    <Rectangle2D />
                 </viewport>
              </ImageView>
           </graphic>
           <padding>
              <Insets bottom="1.0" left="1.0" right="1.0" top="1.0" />
           </padding>
        </Button>
        <Button fx:id="matchWholeWordButton" alignment="CENTER" contentDisplay="GRAPHIC_ONLY" layoutX="214.0" layoutY="12.0" mnemonicParsing="false" onAction="#matchWholeWordAction" prefHeight="25.0" prefWidth="25.0" textAlignment="CENTER">
           <graphic>
              <ImageView fitHeight="23.0" fitWidth="23.0" pickOnBounds="true" preserveRatio="true">
                 <Image url="@../../images/icons/match_whole_word.png" />
                 <viewport>
                    <Rectangle2D />
                 </viewport>
              </ImageView>
           </graphic>
           <padding>
              <Insets bottom="1.0" left="1.0" right="1.0" top="1.0" />
           </padding>
        </Button>
      </AnchorPane>
   </left>
   <center>
      <TabPane fx:id="accountTabPane" prefHeight="200.0" prefWidth="200.0" tabClosingPolicy="ALL_TABS" BorderPane.alignment="CENTER">
        <Tab fx:id="homeTab" closable="false" text="Home" />
        <Tab fx:id="addTab" closable="false" text="+" />
      </TabPane>
   </center>
   <stylesheets>
      <URL value="@../css/style.css" />
      <URL value="@../css/components/ListView.css" />
      <URL value="@../css/components/TabPane.css" />
   </stylesheets>
</BorderPane>
